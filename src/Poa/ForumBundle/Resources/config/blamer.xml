<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="forum.blamer.topic.class">Poa\ForumBundle\Blamer\TopicBlamer</parameter>
        <parameter key="forum.blamer.post.class">Poa\ForumBundle\Blamer\PostBlamer</parameter>
    </parameters>

    <services>

        <service id="forum.blamer.topic" class="%forum.blamer.topic.class%">
            <argument type="service" id="security.context" on-invalid="ignore" />
        </service>

        <service id="forum.blamer.post" class="%forum.blamer.post.class%">
            <argument type="service" id="security.context" on-invalid="ignore" />
        </service>

    </services>

</container>
