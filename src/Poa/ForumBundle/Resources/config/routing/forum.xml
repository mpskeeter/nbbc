    <route id="forum_post_delete" pattern="/post/delete/{id}">
        <default key="_controller">forum.controller.post:deleteAction</default>
        <requirement key="id">\w+</requirement>
    </route>

    <route id="forum_topic_show" pattern="/{categorySlug}/{slug}.{_format}">
        <default key="_controller">forum.controller.topic:showAction</default>
        <default key="_format">html</default>
        <requirement key="_format">(html|xml)</requirement>
        <requirement key="slug">[-\w]+</requirement>
    </route>

    <route id="forum_topic_post_new" pattern="/{categorySlug}/{slug}/reply">
        <default key="_controller">forum.controller.topic:postNewAction</default>
        <requirement key="_method">get</requirement>
        <requirement key="slug">[-\w]+</requirement>
    </route>

    <route id="forum_topic_post_create" pattern="/{categorySlug}/{slug}/reply">
        <default key="_controller">forum.controller.topic:postCreateAction</default>
        <requirement key="_method">post</requirement>
        <requirement key="slug">[-\w]+</requirement>
    </route>

    <route id="forum_topic_delete" pattern="/topic/delete/{id}">
        <default key="_controller">forum.controller.topic:deleteAction</default>
        <requirement key="id">\w+</requirement>
    </route>

    <route id="forum_index" pattern="/">
        <default key="_controller">forum.controller.forum:indexAction</default>
    </route>

</routes>
