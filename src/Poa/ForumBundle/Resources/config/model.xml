<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Category Repository Service -->
        <service id="forum.repository.category"
                 factory-method="getRepository"
                 factory-service="forum.object_manager"
                 class="Poa\ForumBundle\Entity\CategoryRepositoryInterface">
            <argument type="string">%forum.model.category.class%</argument>
        </service>

        <!-- Topic Repository Service -->
        <service id="forum.repository.topic"
                 factory-method="getRepository"
                 factory-service="forum.object_manager"
                 class="Poa\ForumBundle\Entity\TopicRepositoryInterface">
            <argument type="string">%forum.model.topic.class%</argument>
        </service>

        <!-- Post Repository Service -->
        <service id="forum.repository.post"
                 factory-method="getRepository"
                 factory-service="forum.object_manager"
                 class="Poa\ForumBundle\Entity\PostRepositoryInterface">
            <argument type="string">%forum.model.post.class%</argument>
        </service>
    </services>

</container>
