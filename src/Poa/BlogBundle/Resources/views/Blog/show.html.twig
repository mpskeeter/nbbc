{# Poa/BlogBundle/Resources/views/Blog/show.html.twig #}
{% extends 'PoaMainBundle::layout.html.twig' %}

{% block title %} - {{ blog.title }}{% endblock %}

{% block content %}
    <tr><td>
<article class="blog">
	<header>
		<div class="date"><time datetime="{{ blog.createdAt|date('c') }}">{{ blog.createdAt|date('l, F j, Y') }}</time></div>
		<h2>{{ blog.title }}</h2>
	</header>
	<img src="{{ asset(['images/', blog.image]|join) }}" alt="{{ blog.title }} image not found" class="large" />
	<div>
		<p>{{ blog.blog | bbcode_filter | raw }}</p>
	</div>
</article>
    </td></tr>
{% endblock %}